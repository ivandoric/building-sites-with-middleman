---
pageable: true
per_page: 12
---
<div class="container">
    <h2>Category: <%= category %></h2>
    
    <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>
    
      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>
    
    <div class="video-list">
        <% page_articles.each_with_index do |article, i| %>
            <div class="video-list-item clearfix">
                <div class="meta">
                    <ol>
                        <% article.tags.each do |tag, articles| %>
                            <li><%= link_to "#{tag}", tag_path(tag, 'videos') %></li>
                        <% end %>
                    </ol>
                </div>
                <div class="content">
                    <h3><a href="<%= article.url  %>"><%= article.title %></a></h3>
                    <%= thumb_tag article.data.image, '447x' %>
                    <p><%= article.data.introtext %></p>
                    <%= link_to("Read more", article.url, class:"btn") %>
                </div>
            </div>
        <% end %>
    </div>

    
    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>
</div>